# Application Settings
APP_NAME="AWE Academy"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_KEY=base64:your-secret-key-here

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=awe_academy
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@aweacademy.com
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Settings
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
UPLOAD_PATH=/uploads

# Security Settings
SESSION_LIFETIME=120
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
CSRF_LIFETIME=60

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_MAX_FILES=30
LOG_PATH=/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=awe_academy_
CACHE_TTL=3600

# Payment Gateway (if needed)
PAYMENT_GATEWAY=stripe
STRIPE_KEY=your-stripe-key
STRIPE_SECRET=your-stripe-secret
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# SMS Gateway (if needed)
SMS_PROVIDER=twilio
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token
TWILIO_FROM=your-twilio-number

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATION_EMAIL=admin@aweacademy.com

# Report Generation
REPORT_PATH=/reports
REPORT_TEMP_PATH=/temp
PDF_PAPER_SIZE=A4
PDF_ORIENTATION=portrait

# System Settings
MAX_LOGIN_ATTEMPTS=5
PASSWORD_TIMEOUT=30
INACTIVE_USER_TIMEOUT=30
MAINTENANCE_MODE=false

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_USER_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false

# API Configuration (if needed)
API_DEBUG=false
API_THROTTLE_ATTEMPTS=60
API_THROTTLE_MINUTES=1
JWT_SECRET=your-jwt-secret
JWT_TTL=60

# Development Settings
DEV_SEED_DATA=true
DEV_MOCK_PAYMENTS=true
DEV_ERROR_REPORTING=true
DEV_QUERY_LOG=false

# Testing Configuration
TEST_DB_DATABASE=awe_academy_test
TEST_MAIL_MAILER=array
TEST_CACHE_DRIVER=array
TEST_SESSION_DRIVER=array
TEST_QUEUE_CONNECTION=sync

# Custom Settings
SCHOOL_TERMS_PER_YEAR=3
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC
DEFAULT_LANGUAGE=en
ACADEMIC_YEAR_START=09-01
ACADEMIC_YEAR_END=06-30

# Social Media (if needed)
FACEBOOK_URL=
TWITTER_URL=
INSTAGRAM_URL=
LINKEDIN_URL=

# Contact Information
ADMIN_EMAIL=admin@aweacademy.com
SUPPORT_EMAIL=support@aweacademy.com
CONTACT_PHONE=+1234567890
SCHOOL_ADDRESS="123 Education Street, Learning City, ST 12345"
